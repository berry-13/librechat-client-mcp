{
  "name": "@anthropic/librechat-client-mcp",
  "version": "0.1.0",
  "description": "A Model Context Protocol (MCP) server for LibreChat Client package, providing AI assistants with access to LibreChat client source code, types, hooks, and API documentation.",
  "type": "module",
  "main": "./build/index.js",
  "bin": {
    "librechat-client-mcp": "build/index.js"
  },
  "files": [
    "build/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "node -e \"const fs=require('fs');if(fs.existsSync('build'))fs.rmSync('build',{recursive:true,force:true})\"",
    "prepublishOnly": "npm run clean && npm run build",
    "start": "node build/index.js",
    "dev": "tsc && node build/index.js"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "librechat",
    "librechat-client",
    "api-client",
    "typescript",
    "ai-tools",
    "claude"
  ],
  "author": "Anthropic",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anthropics/librechat-client-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/anthropics/librechat-client-mcp/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.16.0",
    "axios": "^1.8.4",
    "cheerio": "^1.0.0",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "joi": "^17.13.3",
    "uuid": "^10.0.0",
    "winston": "^3.15.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/node": "^22.10.5",
    "@types/uuid": "^10.0.0",
    "typescript": "^5.7.2"
  }
}
