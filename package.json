{
  "name": "@librechat/client-mcp",
  "version": "0.1.0",
  "description": "A Model Context Protocol (MCP) server for LibreChat Client package, providing AI assistants with access to LibreChat client source code, types, hooks, and API documentation.",
  "type": "module",
  "main": "./build/index.js",
  "bin": {
    "librechat-client-mcp": "build/index.js"
  },
  "files": [
    "build/**/*",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "node -e \"const fs=require('fs');if(fs.existsSync('build'))fs.rmSync('build',{recursive:true,force:true})\"",
    "prepublishOnly": "npm run clean && npm run build",
    "start": "node build/index.js",
    "start:railway": "node build/index.js --mode sse --host 0.0.0.0",
    "dev": "tsc && node build/index.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write src/",
    "format:check": "prettier --check src/"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "librechat",
    "librechat-client",
    "api-client",
    "typescript",
    "ai-tools",
    "claude"
  ],
  "author": "Anthropic",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/anthropics/librechat-client-mcp.git"
  },
  "bugs": {
    "url": "https://github.com/anthropics/librechat-client-mcp/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.16.0",
    "axios": "^1.8.4",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "joi": "^17.13.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/node": "^22.10.5",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.0.0"
  }
}
